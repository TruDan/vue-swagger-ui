{
  "$schema": "https://json.schemastore.org/jsconfig.json",
  "compilerOptions": {
    "newLine": "lf",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost"],
    "jsx": "preserve",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"],
  "vueCompilerOptions": { "target": 2.7 }
}
